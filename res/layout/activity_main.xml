<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wxx.MainActivity"
    android:background="@drawable/bj" >

 <Spinner
     android:id="@+id/spinner3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/spinner2"
     android:layout_below="@+id/spinner2"
     android:layout_marginTop="17dp"
     android:entries="@array/spingarr1" />

 
 <TextView
     android:id="@+id/text3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignRight="@+id/text2"
     android:layout_alignTop="@+id/spinner3"
     android:layout_marginTop="14dp"
     android:text="时间（秒）"
     android:textSize="20sp" />

<TextView
    android:id="@+id/text5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/text3"
    android:layout_below="@+id/spinner3"
    android:layout_marginTop="30dp"
    android:text="次数（次）"
    android:textSize="20sp" />

<Spinner
    android:id="@+id/spinner4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/spinner3"
    android:layout_below="@+id/spinner3"
    android:layout_marginTop="16dp"
    android:entries="@array/spingarr2" />

<Spinner
    android:id="@+id/spinner2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/text4"
    android:layout_below="@+id/text4"
    android:layout_marginTop="29dp"
    android:entries="@array/spingarr" />

<TextView
    android:id="@+id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginRight="19dp"
    android:layout_marginTop="100dp"
    android:layout_toLeftOf="@+id/button1"
    android:text="测试设备"
    android:textSize="20sp" />

<Button
    android:id="@+id/button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:text="确定" />

<TextView
    android:id="@+id/text7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/text4"
    android:layout_alignRight="@+id/text1"
    android:layout_marginBottom="26dp"
    android:text="地点"
    android:textSize="20sp" />

<TextView
    android:id="@+id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/text1"
    android:layout_alignTop="@+id/spinner2"
    android:layout_marginTop="15dp"
    android:text="方向"
    android:textSize="20sp" />

<EditText
    android:id="@+id/text8"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/text7"
    android:layout_alignLeft="@+id/text4"
    android:layout_alignParentRight="true"
    android:ems="1"
    android:textSize="12sp" >

    <requestFocus />
</EditText>

<EditText
    android:id="@+id/text4"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/text1"
    android:layout_alignLeft="@+id/button1"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="20dp"
    android:ems="1"
    android:textSize="12sp" />

<Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/text7"
    android:layout_alignRight="@+id/text8"
    android:text="查看" />

<Button
    android:id="@+id/button3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/text7"
    android:layout_toLeftOf="@+id/text4"
    android:text="单个wifi测试" />

</RelativeLayout>